doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
  title UI
  link(rel='stylesheet' href='/assets/bootstrap/css/bootstrap.min.css')
  link(rel='stylesheet' href='/assets/css/styles.css')
div
  script.
    function auto(k) {
    for(var i=0;i<#{data.org[id].peercount};i++){
    document.getElementById('peer'+i+'name').value = 'peer'+i;
    document.getElementById('peer'+i+'port').value = 7051+k*100+i*10;
    }
    }
  form(method='post' enctype='application/json' action='/create/setpeer/'+id)
    .container(style='width: 80%;height: 60%;')
      .row
        .col-md-6(style='max-width: 20%;margin-top: 98px;height: 100%;text-align:center;')
          .table-responsive.table-bordered.text-center.border.rounded-0.border-white(style='max-height: 240px;min-height: 240px;')
            table.table.table-bordered
              tbody
                - for(var i=0;i<data.orgcount;i++)
                  if(i==id)
                    tr
                      td.table-active
                        a(href='/create/setpeer/'+i style='color: black') #{data.org[i].name}
                  else if(data.org[i].peer.length)
                    tr
                      td.table-success
                        a(href='/create/setpeer/'+i style='color: white') #{data.org[i].name}
                  else
                    tr
                      td
                        a(href='/create/setpeer/'+i style='color: black') #{data.org[i].name}
          button.btn.btn-light.btn(type='button' style='margin-top: 5px; margin-right: 5px;' onclick='auto('+id+')') Auto Fill
          button.btn.btn-light.btn(type='submit' style='margin-top: 5px;') Next Page
          if(finished)
            a.btn.btn-light(role='button' href='/create/setpeer/finished') Goto Submit
        .col-md-6(style='max-width: 60%;min-width: 60%;')
          h1.text-center(style='margin-top: 20px;') Org#{id} Peer Info
          br
          .table-responsive.table-borderless(style='max-height: 380px;')
            table.table.table-bordered
              tbody(style='max-height: 400px;')
                - for(var i=0;i<data.org[id].peercount;i++)
                  tr
                    td.text-center.d-lg-flex.justify-content-lg-center.align-items-lg-center
                      p(style='padding-top: 7px;') Peer#{i} Name
                    td.align-middle(style='width: 120%;')
                      input.form-control(name='peer'+i+'name' id='peer'+i+'name' type='text' required='' value=data.org[id].peer[i].name)
                  tr
                    td.text-center.d-lg-flex.justify-content-lg-center.align-items-lg-center
                      p(style='padding-top: 7px;') Peer#{i} Port
                    td.align-middle(style='width: 120%;')
                      input.form-control(name='peer'+i+'port' id='peer'+i+'port' type='number' min='1' max='65536' required='' value=data.org[id].peer[i].port)
        .col-md-6(style='max-width: 20%;margin-top: 80px;height: 70%;text-align: center;')
          iframe(src='http://free.timeanddate.com/clock/i7939c4e/n241/szw160/szh160/hbw0/hfc000/cf100/hgr0/fav0/fiv0/mqcfff/mql15/mqw4/mqd94/mhcfff/mhl15/mhw4/mhd94/mmv0/hhcbbb/hmcddd/hsceee' frameborder='0' width='160' height='160')
          iframe(src='http://free.timeanddate.com/clock/i7938zsk/n241/tltw/fn6/fs16/fc9ff/tc000/ftb/bas2/bat1/bacfff/pa8/tt0/tw1/th1/ta1/tb4' frameborder='0' width='160' height='60')
script(src='/assets/js/jquery.min.js')
script(src='/assets/bootstrap/js/bootstrap.min.js')
