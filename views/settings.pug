doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
  title Automatic Fabric
  link(rel='stylesheet' href='/assets/bootstrap/css/bootstrap.min.css')
  link(rel='stylesheet' href='/assets/css/styles.css')
.container.text-center(style='width: 60%;padding: 0px;margin-top: 5%;')
  h2 Automatic Fabric CP
  p Welcome back, #{user}.
  .table-responsive.table-borderless
    table.table.table-sm
      tbody
        tr
          td.text-center(style='width:160px;')
            if(isadmin)
              a.btn.btn-light(role='button' href='/admin' target='_blank' style='width:150px;margin-bottom:10px;') Admin CP
            else
              a.btn.btn-light(role='button' href='/new' style='width:150px;margin-bottom:10px;') Create New
            a.btn.btn-light(role='button' href='/settings' style='width:150px;margin-bottom:10px;') Settings
            a.btn.btn-light(role='button' href='/logout' style='width:150px;margin-bottom:10px;') Logout
          td.text
            form(role='form' autocomplete='off' method='post' enctype='application/json' action='/settings')
              .table-responsive.table-bordered
                table.table.table-sm
                  tbody
                    tr
                      td.text-left
                        input.form-control(name='oldpwd' type='password' placeholder='Please enter your old password' size='3' required='')
                        br
                    tr
                      td.text-left
                        input.form-control(name='newpwd' type='password' placeholder='Please enter your new password' size='3' required='')
              button.btn.btn-light(type='submit' style='margin-top:20px;width:100px') Submit
script(src='assets/js/jquery.min.js')
script(src='assets/bootstrap/js/bootstrap.min.js')
