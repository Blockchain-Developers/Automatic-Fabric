doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
  title Automatic Fabric
  link(rel='stylesheet' href='/assets/bootstrap/css/bootstrap.min.css')
  link(rel='stylesheet' href='/assets/css/styles.css')
div
  script.
    function auto(i) {
    document.getElementById("orgname").value='org'.concat(i);
    document.getElementById("ordererport").value=7050+i*100;
    document.getElementById("caport").value=7054+i*100;
    }
  form(method='post' enctype='application/json' action='/create/setorg/'+id)
    .container(style='width: 80%;height: 60%;')
      .row
        .col-md-6(style='max-width: 20%;margin-top: 98px;height: 100%;text-align:center;')
          .table-responsive.table-bordered.text-center.border.rounded-0.border-white(style='max-height: 240px;min-height: 240px;')
            table.table.table-bordered
              tbody
                - for(var i=0;i<data.orgcount;i++)
                  if(i==id)
                    tr
                      td.table-active
                        a(href='/create/setorg/'+i style='color: black') Org #{i}
                  else if(data.org[i])
                    tr
                      td.table-success
                        a(href='/create/setorg/'+i style='color: white') Org #{i}
                  else
                    tr
                      td
                        a(href='/create/setorg/'+i style='color: black') Org#{i}
          button.btn.btn-light.btn(type='button' style='margin-top: 5px; margin-right: 5px;' onclick='auto('+id+')') Auto Fill
          button.btn.btn-light.btn(type='submit' style='margin-top: 5px;') Next Page
          if(finished)
            a.btn.btn-light(role='button' href='/create/setorg/finished') Goto Submit
        .col-md-6(style='max-width: 60%;min-width: 60%;')
          h1.text-center(style='margin-top: 20px;') Org#{id} Info
          br
          .table-responsive.table-borderless(style='max-height: 380px;')
            table.table.table-bordered
              tbody(style='max-height: 400px;')
                tr
                  td.text-center.d-lg-flex.justify-content-lg-center.align-items-lg-center
                    p(style='padding-top: 7px;') Org Name
                  td.align-middle(style='width: 120%;')
                    input.form-control(name='orgname' id='orgname' type='text' required='' value=orgname)
                tr
                  td.text-center.d-lg-flex.justify-content-lg-center.align-items-lg-center
                    p(style='padding-top: 7px;') Peer Count
                  td.align-middle(style='width: 120%;')
                    input.form-control(name='peercount' id='peercount' type='number' required='' min='1' value=peercount)
                tr
                  td.text-center.d-lg-flex.justify-content-lg-center.align-items-lg-center
                    p(style='padding-top: 7px;') Orderer Port
                  td.align-middle(style='width: 120%;')
                    input.form-control(name='ordererport' id='ordererport' type='number' required='' min='1' max='65536' value=ordererport)
                tr
                  td.text-center.d-lg-flex.justify-content-lg-center.align-items-lg-center
                    p(style='padding-top: 7px;') Ca Port
                  td.align-middle(name='caport' style='width: 120%;')
                    input.form-control(name='caport' id='caport' type='number' required='' min='1' max='65536' value=caport)
        .col-md-6(style='max-width: 20%;margin-top: 80px;height: 70%;text-align: center;')
          iframe(src='http://free.timeanddate.com/clock/i7939c4e/n241/szw160/szh160/hbw0/hfc000/cf100/hgr0/fav0/fiv0/mqcfff/mql15/mqw4/mqd94/mhcfff/mhl15/mhw4/mhd94/mmv0/hhcbbb/hmcddd/hsceee' frameborder='0' width='160' height='160')
          iframe(src='http://free.timeanddate.com/clock/i7938zsk/n241/tltw/fn6/fs16/fc9ff/tc000/ftb/bas2/bat1/bacfff/pa8/tt0/tw1/th1/ta1/tb4' frameborder='0' width='160' height='60')
script(src='/assets/js/jquery.min.js')
script(src='/assets/bootstrap/js/bootstrap.min.js')
